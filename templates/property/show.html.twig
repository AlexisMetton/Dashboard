{% extends 'base.html.twig' %}

{% block title property.title %}

{% block body %}
    <div class="container mt-4 ">
        <div class="row">
           
            <div class=" justify-content-center text-center ">
                <h1>{{ property.title }}</h1> 
                <h2 class=" mb-5 " style="font-size: 1.5rem;">{{ property.description }} </h2>
                <div class=" text-primary  align-content-between " style="font-size: 2rem; font-weight:bold;">
                {% if property.image == true %}
                    <img class="mb-5" src="{{ asset ('img/ticket/' ~ property.image) | imagine_filter('show') }}">
                {% endif %}
                    <div class=" d-lg-flex justify-content-between ">
                        <p class="  d-lg-flex justify-content-center " style="color:#393D3A; padding:15px; border-style:solid; border-radius:8px">{{ property.formattedPrice}} â‚¬</p>
                        <div class=" d-lg-flex justify-content-between" style="color:#393D3A;  ">
                            <p style="color:#393D3A; padding:15px; border-style:solid; border-radius:8px; margin-right:2px;"> Achat: {{property.dateAchat | date('d-m-Y')}}</p>
                            <p style="color:#393D3A; padding:15px; border-style:solid; border-radius:8px; "> Garantie: {{property.dateGarantie | date('d-m-Y')}}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
