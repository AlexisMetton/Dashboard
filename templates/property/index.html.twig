{% extends 'base.html.twig' %}

{% block title 'Tous nos achats' %}

{% block body %}
    <div class="jumbotron" style="margin-top:10px">
        <div class="container">
            {{ form_start(form) }}
            <div class="form row">
                <div class="col">
                    {{ form_row(form.minPrice) }}
                </div>
                <div class="col">
                    {{ form_row(form.maxPrice) }}
                </div>
                <div class="col">
                    <button class="btn btn-light">Rechercher</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="container mt-4">
        <h1>Voir tous nos achats</h1>

    <div class="row">

        {% for property in properties %}
           <div class="col-3">
                    <div class="card" style="margin-bottom:25px">
                        <div class="card-body text-center">
                            <h5 class="card-title " style="height:100px; padding:auto;">
                                <a href="{{ path('property.show', {id: property.id, slug: property.slug}) }}" class="text-info" style="font-size:1.3rem; text-decoration:none;">{{ property.title | u.truncate(50,'...')}}</a> <!-- u.truncate ( 50, '...' pour raccourcir un texte sur une carte-->
                            </h5>
                            <!-- <p class="card-text">{property.description}}</p> --> 
                             {% if property.image == true %}
                            <img src="{{ asset ('img/ticket/' ~ property.image) | imagine_filter('square') }}">
                            {% endif %}         
                            <div class="text-dark" style="font-weight:bold; font-size:2rem; ">{{ property.formattedPrice}} â‚¬</div>
                        </div>
                    </div>
                </div>
        {% endfor %}
    </div>
    <div class="pagination active">
        {{ knp_pagination_render(properties) }} 
    </div>
    </div>
{% endblock %}